language: go
go:
  - "1.15"

addons:
  apt:
    packages:
    - ssh
    - sshpass

before_script:
  - sshpass -p $DOMAINESIA_SSH_PASSWORD ssh -p 64000 $DOMAINESIA_SSH_USER@$DOMAINESIA_SSH_HOST

deploy:
  provider: script
  skip_cleanup: true
  script: bash deploy/domainesia/deploy.sh
  on:
    branch: master
